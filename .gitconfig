[merge]
	summary = true
[status]
	color = auto
[color]
	diff = auto
	status = auto
	branch = auto
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[alias]
     df   = difftool
     get  = fetch origin --prune
     cleanup = clean -fdx
#    st   = status
#    stat = status
     ci   = commit
#    cia  = commit -a
#    br   = branch
     co   = checkout
#    lg   = log -p
#    gk   = log  --graph --abbrev-commit --pretty=oneline --decorate --all
     sb   = show-branch --color --more=99 --sha1-name
[core]
	excludesfile = /home/dgsteffen/.gitignore
