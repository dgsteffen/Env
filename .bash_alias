### File Filtering

alias kfile='drm $1'
function kfiler () {   find ./ -name "$1" -exec drm {} \; ; }
alias kt='kfile *~'
alias ktr='kfiler "*~"'
alias kcore='kfile core*'
alias kcorer='kfiler "core*"'
alias klog='kfile log.*'
alias klogr='kfiler "log.*"'

alias tidyup='ktr ; kcorer ; klogr ;'

alias kpdf='okular'


